    <!-- Example from VDOT log - uses USCS classification -->
    
    <observation>
        <LithologySystem gml:id="b7-lith">
            <gml:description>
                Descriptions uses USCS soil classification (major group codes) and rock definitions defined by VDOT
            </gml:description>
            <projectRef xlink:href="#P130-081-104-B601"/>
            <samplingFeatureRef xlink:href="#b-7"/>
            <lithologyClassificationType codeSpace="VDOT">Virginia Dept. of Transportation Soil and Rock Classification</lithologyClassificationType>
            <lithologyObservation>
                <LithologyObservation gml:id="lob7-1">
                    <location>
                        <LinearExtent gml:id="lob7-1-loc" srsName="#b7-lsrs">
                            <gml:posList>0 17.5</gml:posList>
                        </LinearExtent>
                    </location>
                    <primaryLithology>
                        <Lithology gml:id="lob7-1-1">
                            <classificationCode codeSpace="https://www.astm.org/d2488-17e01.html" howDetermined="visual" legendCode="SP-SM">SP-SM</classificationCode>
                            <!-- legendCode need not be specified if same as code value -->
                            <!-- Alternatively, if specified (not in this log), the code should be the group name, and legendCode the group symbol
                             <classificationCode codeSpace="https://www.astm.org/d2488-17e01.html" howDetermined="visual" legendCode="SP-SM">Poorly graded sand with silt</classificationCode>
                            -->
                            <lithDescription>
                                Alluvium. Loose to firm, moist to wet, brown, silt-sand mixtures. SP-SM
                            </lithDescription>
                            <!-- Details of the lith description can also be mapped to physical properties, depending on intent -->
                            <color>
                                <Color gml:id="lob7-1-color" origin="matrix" character="uniform">
                                    <colorName>brown</colorName>
                                </Color>
                            </color>
                            <facies>alluvium</facies>
                            <fieldProperties>
                                <FieldProperties gml:id="lob7-1-fp">
                                    <apparentDensity codeSpace="VDOT">loose to firm</apparentDensity>
                                    <moistureCondition codeSpace="VDOT">moist to wet</moistureCondition>
                                </FieldProperties>
                            </fieldProperties>
                        </Lithology>
                    </primaryLithology>
                </LithologyObservation>
            </lithologyObservation>
            <lithologyObservation>
                <LithologyObservation gml:id="lob7-2">
                    <location>
                        <LinearExtent gml:id="lob7-2-loc" srsName="#b7-lsrs">
                            <gml:posList>17.5 19.5</gml:posList>
                        </LinearExtent>
                    </location>
                    <primaryLithology>
                        <Lithology gml:id="lob7-2-1">
                            <classificationCode codeSpace="https://www.astm.org/d2488-17e01.html" howDetermined="visual" legendCode="GP">GP</classificationCode>
                            <!-- legendCode need not be specified if same as code value -->
                            <!-- Alternatively, if specified (not in this log), the code should be the group name, and legendCode the group symbol
                             <classificationCode codeSpace="https://www.astm.org/d2488-17e01.html" howDetermined="visual" legendCode="SP-SM">Poorly graded gravel with sand</classificationCode>
                            -->
                            <lithDescription>
                            Alluvium. Compact, saturated, yellowish-brown, silt-sand-gravel-cobble mixtures. GP
                            </lithDescription>
                            <!-- Details of the lith description can also be mapped to physical properties, depending on intent -->
                            <color>
                                <Color gml:id="lob7-2-2-color" origin="matrix" character="uniform">
                                    <colorName>yellowish-brown</colorName>
                                </Color>
                            </color>
                            <facies>alluvium</facies>
                            <fieldProperties>
                                <FieldProperties gml:id="lob7-2-2-fp">
                                    <apparentDensity codeSpace="VDOT">compact</apparentDensity>
                                    <moistureCondition codeSpace="VDOT">saturated</moistureCondition>
                                </FieldProperties>
                            </fieldProperties>
                        </Lithology>
                    </primaryLithology>
                </LithologyObservation>
            </lithologyObservation>
            <lithologyObservation>
                <LithologyObservation gml:id="lob7-3">
                    <location>
                        <LinearExtent gml:id="lob7-3-1-loc" srsName="#b7-lsrs" srsDimension="1">
                            <gml:posList>19.5 40</gml:posList>
                        </LinearExtent>
                    </location>
                    <trueBaseObserved>false</trueBaseObserved>
                    <primaryLithology>
                        <Lithology gml:id="lob7-3-1">
                            <classificationCode codeSpace="VDOT" howDetermined="visual" legendCode="MST">MST</classificationCode>
                            <!-- legendCode need not be specified if same as code value -->
                            <!-- Alternatively, if specified (not in this log), the code should be the group name, and legendCode the group symbol
                             <classificationCode codeSpace="VDOT" howDetermined="visual" legendCode="MST">Mudstone</classificationCode>
                            -->
                            <lithDescription>
                                Bedrock. Predominantly grayish-red and greenish-gray, variegated, laminated to thin bedded, fissile, very fine- to fine-grained, medium to hard, fractured, siltstone and shale. Some partially to completely weathered sones. MST
                            </lithDescription>
                            <!-- Details of the lith description can also be mapped to physical properties, depending on intent -->
                            <color>
                                <Color gml:id="lob7-3-1-color1" origin="matrix"
                                    character="variegated">
                                    <colorName>grayish red</colorName>
                                </Color>
                            </color>
                            <color>
                                <Color gml:id="lob7-3--color2" origin="matrix"
                                    character="variegated">
                                    <colorName>greenish gray</colorName>
                                </Color>
                            </color>
                            <facies>bedrock</facies>
                            <fieldProperties>
                                <FieldProperties gml:id="lob7-3-1-fp">
                                    <beddingSpacing codeSpace="VDOT">laminated to thin-bedded</beddingSpacing>
                                    <rockGrainSize codeSpace="VDOT">very-fine to fine-grained</rockGrainSize>
                                    <rockHardness codeSpace="VDOT">medium to hard</rockHardness>
                                    <rockWeathering codeSpace="VDOT">partially to completely</rockWeathering>
                                </FieldProperties>
                            </fieldProperties>
                        </Lithology>
                    </primaryLithology>
                    <placedObservation>
                        <PlacedObservation>
                            <location>
                                <LinearExtent gml:id="lob7-1-po1" srsName="#b7-lsrs"
                                    srsDimension="1">
                                    <gml:posList>27.0 30.6</gml:posList>
                                </LinearExtent>
                            </location>
                            <observation>Void</observation>
                        </PlacedObservation>
                    </placedObservation>
                    <placedObservation>
                        <PlacedObservation>
                            <location>
                                <LinearExtent gml:id="lob7-1-po2" srsName="#b7-lsrs"
                                    srsDimension="1">
                                    <gml:posList>36.0 37</gml:posList>
                                </LinearExtent>
                            </location>
                            <observation>Void</observation>
                        </PlacedObservation>
                    </placedObservation>
                </LithologyObservation>
            </lithologyObservation>
        </LithologySystem>
    </observation>
    <observation>
        <!-- Just for fun, we can also encode a stratigraphy system for this log to define where alluvium and bedrock are located -->
        <StratigraphySystem gml:id="b7-strat">
            <projectRef xlink:href="#P130-081-104-B601"/>
            <samplingFeatureRef xlink:href="#b-7"/>
            <stratigraphyType>lithostratigraphic</stratigraphyType>
            <stratigraphyObservation>
                <StratigraphyObservation gml:id="sob7-1">
                    <location>
                        <LinearExtent gml:id="sob7-1-po" srsName="#b7-lsrs" srsDimension="1">
                            <gml:posList>0 19.5</gml:posList>
                        </LinearExtent>
                    </location>
                    <stratigraphicUnitName>Alluvium</stratigraphicUnitName>
                </StratigraphyObservation>
            </stratigraphyObservation>
            <stratigraphyObservation>
                <StratigraphyObservation gml:id="sob7-2">
                    <location>
                        <LinearExtent gml:id="sob7-2-po" srsName="#b7-lsrs" srsDimension="1">
                            <gml:posList>19.5 40</gml:posList>
                        </LinearExtent>
                    </location>
                    <trueBaseObserved>false</trueBaseObserved>
                    <stratigraphicUnitName>Bedrock</stratigraphicUnitName>
                </StratigraphyObservation>
            </stratigraphyObservation>
        </StratigraphySystem>
    </observation>

